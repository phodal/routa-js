{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Routa Desktop",
  "version": "0.1.0",
  "identifier": "com.routa.desktop",
  "build": {
    "beforeDevCommand": "cd ../.. && npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "node ../../scripts/prepare-frontend.mjs",
    "frontendDist": "../../../out"
  },
  "app": {
    "windows": [
      {
        "title": "Routa - Multi-Agent Coordination Platform for AI Development",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "frontend/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "sql": {
      "preload": ["sqlite:routa.db"]
    }
  }
}
