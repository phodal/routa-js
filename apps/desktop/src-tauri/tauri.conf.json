{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Routa Desktop",
  "version": "0.1.0",
  "identifier": "com.routa.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../../.next"
  },
  "app": {
    "title": "Routa Desktop",
    "windows": [
      {
        "title": "Routa - Multi-Agent Coordination",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "opencode",
          "cmd": "opencode",
          "args": true
        },
        {
          "name": "codex-acp",
          "cmd": "codex-acp",
          "args": true
        },
        {
          "name": "gemini",
          "cmd": "gemini",
          "args": true
        },
        {
          "name": "claude",
          "cmd": "claude",
          "args": true
        },
        {
          "name": "copilot",
          "cmd": "copilot",
          "args": true
        }
      ]
    },
    "fs": {
      "scope": {
        "allow": ["$HOME/**", "$APPDATA/**", "$DESKTOP/**", "$DOCUMENT/**", "$DOWNLOAD/**"],
        "deny": []
      }
    },
    "sql": {
      "preload": {
        "db": "sqlite:routa.db"
      }
    }
  }
}
