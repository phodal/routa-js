{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for Routa Desktop",
  "windows": ["*"],
  "webviews": ["*"],
  "platforms": ["linux", "macOS", "windows"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:webview:default",

    "shell:default",
    "shell:allow-open",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "which", "cmd": "which", "args": true },
        { "name": "git", "cmd": "git", "args": true },
        { "name": "opencode", "cmd": "opencode", "args": true },
        { "name": "codex-acp", "cmd": "codex-acp", "args": true },
        { "name": "gemini", "cmd": "gemini", "args": true },
        { "name": "claude", "cmd": "claude", "args": true },
        { "name": "copilot", "cmd": "copilot", "args": true }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "which", "cmd": "which", "args": true },
        { "name": "sh", "cmd": "/bin/sh", "args": true },
        { "name": "bash", "cmd": "/bin/bash", "args": true },
        { "name": "zsh", "cmd": "/bin/zsh", "args": true },
        { "name": "git", "cmd": "git", "args": true },
        { "name": "opencode", "cmd": "opencode", "args": true },
        { "name": "codex-acp", "cmd": "codex-acp", "args": true },
        { "name": "gemini", "cmd": "gemini", "args": true },
        { "name": "claude", "cmd": "claude", "args": true },
        { "name": "copilot", "cmd": "copilot", "args": true }
      ]
    },

    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",

    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$APPDATA/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$APPDATA/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    },
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-stat",

    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",

    "process:default",
    "process:allow-exit",
    "process:allow-restart",

    "os:default",
    "os:allow-os-type",
    "os:allow-arch",
    "os:allow-platform",
    "os:allow-hostname",
    "os:allow-locale",
    "os:allow-version"
  ]
}
